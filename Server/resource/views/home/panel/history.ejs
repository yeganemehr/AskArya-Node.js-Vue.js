<%- include(viewPath('home/panel/head')) -%>


<div style="margin: 20px;">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th><%= __('amountpaid') %></th>
                <th><%= __('productbought') %></th>
                <th><%= __('paymentstatus') %></th>
        </tr></thead>
        <tbody>
            
            <% payments.docs.forEach(payment => { %> 
                <tr>
                    <td><%= payment.price %> تومان</td>
                    <td><%= payment.vip ? ' خریداری عضویت ویژه' : `خرید دوره ${payment.course.title}` %></td>
                    <td><%= payment.payment ? 'موفق' : 'ناموفق' %></td>
                </tr>
            <% }) %>

        </tbody>
    </table>

    <%- include(viewPath('layouts/pagination') ,{ pagination : payments}) %>

</div>